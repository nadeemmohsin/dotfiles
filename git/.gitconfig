[push]
  default = current
  autoSetupRemote = true

[alias]
  sw = switch
  co = checkout
  mk = switch -c
  br = branch -l -v
  ci = !git checkout $(git branch -l nm/* | fzf | xargs)
  st = status
  ll = log --pretty --oneline
  rbm = !git sw main && git pull && git sw - && git rebase main
  rbmv = !git sw main && git pull && git co - && git rebase main && go mod vendor

